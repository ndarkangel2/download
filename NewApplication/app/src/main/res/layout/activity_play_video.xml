<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayVideo">>

    <VideoView
        android:id="@+id/viewVideo"
        android:layout_width="260dp"
        android:layout_height="374dp"
        android:layout_alignEnd="@+id/btn_video_home"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btn_take_video"/>
    <Button
        android:id="@+id/btn_take_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="callVideo"
        android:text="Take Video" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/btn_video_home"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="69dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="redirectToHome" />

</RelativeLayout>